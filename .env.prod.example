# Backend API
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# External port that will be exposed on the VPS (change if 8081 is taken)
PUBLIC_PORT=8081

# PostgreSQL
POSTGRES_PASSWORD=changeMeStrong
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/hrms_db

# Auth/JWT
JWT_SECRET=please-change-to-a-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain

# Timezone & misc
TZ=UTC
PAGINATION_PAGE_SIZE=25
UPLOAD_ROOT=/app/uploads
